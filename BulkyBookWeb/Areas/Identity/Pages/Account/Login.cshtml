@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = "_LayoutLogin";
}
<style>
    .hover-underline:hover{
        text-decoration:underline;
    }
</style>
<div class="container">
<div class="row" style="margin-top:138px; ">
    <div class="col-7" style="overflow:hidden;">
        <img src="~/img/Beijing2022.jpg" style="max-height:550px;"/>
    </div>
    <div class="col-5 p-5" >
        @*<h1 class=" text-white">@ViewData["Title"]</h1>*@
        <section>
            <form id="account" method="post" class="" >
                 <a class="hover-underline" asp-area="Employee" asp-controller="Home" asp-action="Index" style="color:#cda45e;letter-spacing:1px;"> <h5 class="">Go to home page.</h5></a>
                <h2 class="text-white">Login and watch live olympic games.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="background:#e6e6e6;"/>
                    <label asp-for="Input.Email" class="form-label text-dark"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" style="background:#e6e6e6;"/>
                    <label asp-for="Input.Password" class="form-label text-dark"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="mt-3">
                    <button id="login-submit" type="submit" class="w-100 btn btnone" style="border:2px solid #cda45e;border-radius:50px;letter-spacing:1px;color:white;">Log in</button>

                   @*  <a asp-area="Identity" asp-page="/Account/Login" class="book-a-table-btn scrollto d-none d-lg-flex">Login</a>*@
                </div>
               <div class="form-floating mt-3 text-center">
                    <p>
                        <a class="hover-underline" id="forgot-password" asp-page="./ForgotPassword" style="color:#cda45e;">Forgot your password?</a>
                    </p>
              
                </div>
            </form>
        </section>
    </div>

</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
