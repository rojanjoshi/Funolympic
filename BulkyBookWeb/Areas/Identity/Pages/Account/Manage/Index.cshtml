@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" >
                <input asp-for="Username" class="form-control" readonly style="background:#e6e6e6;"/>
                <label asp-for="Username" class="form-label" style="color:black;"></label>
            </div>
            <div class="form-floating mt-3" >
                <input asp-for="Input.PhoneNumber" class="form-control"  style="background:#e6e6e6;"/>
                <label asp-for="Input.PhoneNumber" class="form-label" style="color:black;"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn  btnnormal mt-3"><i class="bi bi-save"></i> &nbsp;Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
