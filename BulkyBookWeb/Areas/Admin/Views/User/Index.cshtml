@{
}
@model IEnumerable<ApplicationUser>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">User List</h3>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-success">
               <i class="bi bi-plus-circle"></i> &nbsp; Create User
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
               Name
			</th>
            <th>StreetAddress</th>
            <th>City</th>
            <th>State</th>
            <th>PostalCode</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
				</td>
                 <td>
                    @obj.StreetAddress
				</td>
                 <td>
                    @obj.City
				</td>
                 <td>
                    @obj.State
				</td>
                 <td>
                    @obj.PostalCode
				</td>
                 <td>
                    @obj.Email
				</td>
                 <td>
                    @obj.PhoneNumber
				</td>
            
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>
