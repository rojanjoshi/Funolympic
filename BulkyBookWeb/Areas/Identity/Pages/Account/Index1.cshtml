@page

@model IndexModel1

<style>
    tr{
        color:white;
    }
     td{
        color:white!important;
    }
</style>
<div class="container" style="margin-top:150px;">


<div class=" row mt-3">
    <div class="col-9">
        <h3 class="text-white">User List</h3>
    </div>
    <div class="col-3">
        <a asp-page="/Account/Register" class="btn btn-success form-control text-white" style="background:#cda45e;border-radius:50px;"><i class="bi bi-plus-circle"></i> &nbsp;Create User</a>
    </div>
  
    <hr class="mt-4"/>

    <div class="col-12  mt-2">
        <form method="post" >
            @if (Model.ApplicationUsers.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-dark">
                           <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="ApplicationUsers.FirstOrDefault().StreetAddress"></label>
                        </th>
                  
                      
                           <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().UserName"></label>
                        </th>
                          <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().Email"></label>
                        </th>
                               <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().PhoneNumber"></label>
                        </th>
                    
                                 <th>
                            Action
                        </th>
                    </tr>
                    @foreach (var item in Model.ApplicationUsers)
                    {
                        <tr class="text-white">
                               <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.StreetAddress)
                            </td>
                      
                             <td>
                                @Html.DisplayFor(m => item.UserName)
                            </td>
                          
                            <td>
                                @Html.DisplayFor(m => item.Email)
                            </td>
                                 <td>
                                @Html.DisplayFor(m => item.PhoneNumber)
                            </td>
                         
                            <td>
                               
                                <a asp-page="Index2" asp-route-id="@item.Id" class="btn btn-md aunderline"><i class="bi bi-pencil-square"></i> &nbsp;Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No users available.</p>
            }
        </form>
    </div>



</div>


</div>

