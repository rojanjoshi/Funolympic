@model UserRole

@{
    ViewData["Title"] = "Edit Roles";
}
<style>
    td{
        color:white;
    }
</style>
<div class="container" style="margin-top:150px;">
<h3 class="mt-3">Assign Roles to User</h3>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="RoleName" value="@Model.Role.Name" />

            <div class="row">
                <div class="col-6">
                    <h5>Add users to <span class="badge" style="background:#cda45e;">@Model.Role.Name</span> role</h5>
                    <hr />
                    <table class="table table-bordered">
                        @if (Model.NonMembers.Count() == 0)
                        {
                            <tr><td>All users are members.</td></tr>
                        }
                        else
                        {
                            foreach (ApplicationUser user in Model.NonMembers)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" value="@user.Id" name="AddIds" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
                <div class="col-6">
                    <h5>Remove users from <span class="badge" style="background:#cda45e;">@Model.Role.Name</span> role</h5>
                    <hr />
                    <table class="table table-bordered">
                        @if (Model.Members.Count() == 0)
                        {
                            <tr><td>No users are members.</td></tr>
                        }
                        else
                        {
                            foreach (ApplicationUser user in Model.Members)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" value="@user.Id" name="DeleteIds" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>

            <div class="form-group ">
                <button  type="submit" class="btn btntransparent" style="width:160px;"><i class="bi bi-save"></i> &nbsp;Save</button>
                
                <a class="btn btnnormal" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> &nbsp;Back to List</a>
                
            </div>

        </form>
    </div>
</div>

<div>
   
</div>

</div>