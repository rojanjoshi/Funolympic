@{
}
@{
    Layout = "_Layout1";
}

@model BulkyBook.Models.ViewModels.UpcommingVM

<div class="container" style="margin-top:150px;">
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Upcomming.Id" hidden />
	<input asp-for="Upcomming.ImageUrl" hidden />
	<div class="row">
			<div class="border p-3 mt-4 row">
		<div class="col-12 pb-2">
			@if(Model.Upcomming.Id != 0)
			{
					<h3 class="text-white">Update & Save</h3>

				}else
				{
					<h3 class="text-white">Create</h3>
				}
				
			<hr />
		</div>
		
		<div class="mb-3">
			<label asp-for="Upcomming.Name"></label>
			<input asp-for="Upcomming.Name" class="form-control" type="text" required style="background:#e6e6e6;text-transform:lowercase;"/>
			<span asp-validation-for="Upcomming.Name" class="text-danger"></span>
		</div>

			<div class="mb-3">
			<label asp-for="Upcomming.ImageUrl"></label>
			<input type="file" id="uploadBox" name="file" class="form-control" />
		</div>
				<div class="mb-3">
			<label asp-for="Upcomming.CategoryId"></label>
			<select asp-for="Upcomming.CategoryId" asp-items="@Model.CategoryList" class="form-select">
				<option disabled selected>--Select Category--</option>
			</select>
			<span asp-validation-for="Upcomming.CategoryId" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Upcomming.Date"></label>
			<input asp-for="Upcomming.Date" class="form-control" type="text" required style="background:#e6e6e6;"/>
			<span asp-validation-for="Upcomming.Date" class="text-danger"></span>
		</div>
	
		<div class="col-12">
			@if (Model.Upcomming.Id != 0)
			{
				<button type="submit" class="btn text-white" style="width:190px;background:#cda45e;border-radius:50px;"><i class="bi bi-save"></i> &nbsp;Save</button>
			}
			else
			{
				<button type="submit"  class="btn text-white" style="width:190px;background:#cda45e;border-radius:50px;"><i class="bi bi-plus-circle"></i> &nbsp;Create</button>
			}
			<a asp-controller="Upcomming" asp-action="Index" class="btn text-white btntransparent" style="width:190px;border-radius:50px;border:2px solid #cda45e;"><i class="bi bi-arrow-left-circle"></i> &nbsp;
				Back to List
			</a>
		</div>
	</div>
	</div>
</form>
</div>
@section Scripts{
	@{
	<partial name="_ValidationScriptsPartial" />
	}
}