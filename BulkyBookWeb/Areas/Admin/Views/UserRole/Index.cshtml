@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}
<style>
    td{
        color:white!important;
    }
    a:hover{text-decoration:underline;}
</style>
<div class="container" style="margin-top:150px;">
<h3 class="mt-3">User Roles</h3>

<hr />


<table class="table border">
    <thead>
        <tr class="table-dark">
            <th>Id</th>
            <th>Role</th>
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                
                <td>
                    <a class="btn" asp-action="Edit" asp-route-id="@role.Id" style="color:#cda45e;"><i class="bi bi-pencil-square"></i> &nbsp;Assign User to Role</a> 
                    
                </td>
            </tr>
        }
    </tbody>
</table>

</div>