@page

@model IndexModel2
<div class="container" style="margin-top:150px;">
<h3>Edit User Account.</h3>
<br />
  <form  class="row"  method="post" >

      <input type="hidden" asp-for="ApplicationUser.Id" />
            
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     
            <div class="form-floating py-2 col-6">
                <input asp-for="ApplicationUser.Name" class="form-control"  aria-required="true" />
                <label asp-for="ApplicationUser.Name"></label>
                <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
            </div>
            
              <div class="form-floating py-2 col-6">
                <input asp-for="ApplicationUser.StreetAddress" class="form-control"  aria-required="true" />
                <label asp-for="ApplicationUser.StreetAddress"></label>
                <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
            </div>
              <div class="form-floating py-2 col-6">
                <input asp-for="ApplicationUser.City" class="form-control"  aria-required="true" />
                <label asp-for="ApplicationUser.City"></label>
                <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
            </div>
                  <div class="form-floating py-2 col-6">
                <input asp-for="ApplicationUser.State" class="form-control"  aria-required="true" />
                <label asp-for="ApplicationUser.State"></label>
                <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
            </div>
                  <div class="form-floating py-2 col-6">
                <input asp-for="ApplicationUser.Email" class="form-control"  aria-required="true" />
                <label asp-for="ApplicationUser.Email"></label>
                <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
            </div>
           
                  <div class="form-floating py-2 col-6">
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control"  aria-required="true" />
                <label asp-for="ApplicationUser.PhoneNumber"></label>
                <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
            </div>
         
         
         
           
        
         
          
          
          
                     <div class="form-floating py-2 col-3">
            
                <button  type="submit" class="w-100 btn btnnormal">Save Changes</button>
            </div>

            
        </form>



        </div>