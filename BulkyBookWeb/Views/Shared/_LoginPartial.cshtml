@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


    <style>
        .btnone:hover{background:#cda45e!important;}
    </style>


    

    <ul class="" >


        @if (SignInManager.IsSignedIn(User))
        {
            <li class="">
                <a  class="nav-link aunderline" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color:#cda45e;width:225px;">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="">
                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link">Logout</button>
                </form>
            </li>





        }
        else
        {
            <li class="nav-link ">
            <a asp-area="Identity" asp-page="/Account/Login" class="btnone" style="border:2px solid #cda45e;border-radius:50px;background:transparent;color:white;width:100px;letter-spacing:1px;" >Login</a>
            </li>
        }


    </ul>













